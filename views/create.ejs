<head>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <title>New Chat Room</title>
</head>
<body>
    <div class="container">
        <% include partials/navbar %>
        <form action="/chat" class="form-horizontal" method="post">
            <div class="form-group">
                <label for="chat_room_name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="chat_room_name" name="chat_room_name" placeholder="New Chatroom Name">
                </div>
              </div>
              <div class="form-group">
                  <label for="chatroom_desc" class="col-sm-2 control-label">Description</label>
                  <div class="col-sm-10">
                    <textarea class="form-control" rows="3" id="chatroom_desc" name="description"></textarea>
                  </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="submit" class="btn btn-default" style="width: 15%;">Create</button>
                </div>
              </div>
        </form>
    </div>
</body>